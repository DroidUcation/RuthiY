<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ruthiy.care2car.activities.confirm_request">

    <ImageView

        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@mipmap/care2car"/>

    <com.ruthiy.care2car.utils.views.MyTextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi "
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:textSize="30dp" />

    <com.ruthiy.care2car.utils.views.MyTextViewBold
        android:id="@+id/tvVolunteerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" on his way to you!"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FBC02D" />

    <com.ruthiy.care2car.utils.views.MyTextView
        android:id="@+id/tvVolunteerPhone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:text=" Phone: "
    android:layout_gravity="center"
    android:textSize="30dp" />

    <com.ruthiy.care2car.utils.views.MyButton
        android:id="@+id/bn_call"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginBottom="9dp"
        android:layout_gravity="center"
        android:background="@drawable/mybutton"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Call " />



</LinearLayout>
