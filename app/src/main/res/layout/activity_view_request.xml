<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.ruthiy.care2car.activities.ViewRequestActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        tools:context=".activities.ViewRequestActivity"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <com.ruthiy.care2car.utils.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:layout_marginBottom="10dp"
            android:textColor="#F9A825"
            android:layout_centerHorizontal="true"
            android:gravity="fill_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Someone needs your help!"/>

        <com.ruthiy.care2car.utils.views.MyTextView
            android:id="@+id/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_alignParentLeft="true"
            android:labelFor="@+id/location"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Where: "/>

       <com.ruthiy.care2car.utils.views.MyTextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/where"
           android:layout_marginBottom="5dp"
            android:layout_below="@id/tv1"
           android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="Item Name"/>


        <com.ruthiy.care2car.utils.views.MyTextView
            android:id="@+id/help_With"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:layout_below="@id/location"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Needs your help With: "/>

        <com.ruthiy.care2car.utils.views.MyTextView
            android:id="@+id/problemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/help_With"
            android:inputType="textMultiLine"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="Item Name"/>

        <com.ruthiy.care2car.utils.views.MyTextView
            android:id="@+id/contact_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:layout_below="@id/problemDescription"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact Details: "/>

        <com.ruthiy.care2car.utils.views.MyTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_details"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name: "/>

        <com.ruthiy.care2car.utils.views.MyTextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/contact_details"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="Phone"/>

        <com.ruthiy.care2car.utils.views.MyButton
            android:id="@+id/bn_acceptRequset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginBottom="9dp"
            android:background="@drawable/mybutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" I am on my way " />

        <com.ruthiy.care2car.utils.views.MyButton
            android:id="@+id/bn_declineRequset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginBottom="9dp"
            android:background="@drawable/mybutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" Cann't help now " />

        <com.ruthiy.care2car.utils.views.MyButton
            android:id="@+id/bn_navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginBottom="9dp"
            android:background="@drawable/mybutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Navigate"
            android:visibility="invisible" />

        <com.ruthiy.care2car.utils.views.MyButton
            android:id="@+id/bn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginBottom="9dp"
            android:background="@drawable/mybutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" Call to "
            android:visibility="invisible" />

    </RelativeLayout>


</LinearLayout>



